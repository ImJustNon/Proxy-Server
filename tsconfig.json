{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./build",
    "baseUrl": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,  /* Enable import of JSON modules */
    "incremental": true,
    "removeComments": true,
    "sourceMap": true,
    "declaration": true
  },
  "include": [
    "./**/*",
    "./**/**/*.json"
  ]
}